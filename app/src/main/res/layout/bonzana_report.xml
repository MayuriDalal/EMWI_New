<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bonzanaTimer"
            android:fontFamily="@font/mont_semi_bold"
            android:textColor="@color/colorBlack"
            android:textAllCaps="true"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_20sdp">
            <View
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:text="45"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_20sdp"
                    android:background="@drawable/timerbox"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:text="45"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_20sdp"
                    android:background="@drawable/timerbox"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/hours"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:text="45"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_20sdp"
                    android:background="@drawable/timerbox"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/minutes"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:text="45"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_20sdp"
                    android:background="@drawable/timerbox"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/seconds"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.9"
            android:layout_marginTop="10dp"
            android:scrollbars="horizontal"
            android:touchscreenBlocksFocus="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <LinearLayout
                android:id="@+id/userNameLayout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/topBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/title"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp"

                >

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mont_semi_bold"
                    android:gravity="center"
                    android:text="Sr No"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp"
                    />



                <TextView

                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mont_semi_bold"
                    android:gravity="center"
                    android:text="Award"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp"
                    />



                <TextView

                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mont_semi_bold"
                    android:gravity="center"
                    android:text="Left Count"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp"
                    />


                <TextView

                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mont_semi_bold"
                    android:gravity="center"
                    android:text="Right Count"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp"
                    />




                <TextView

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mont_semi_bold"
                    android:gravity="center"
                    android:text="Direct User"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp"
                    />


                <TextView

                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/mont_semi_bold"
                    android:gravity="center"
                    android:text="Date"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp"
                    />

            </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_bonanza_list"
                    />

                <LinearLayout
                    android:id="@+id/ll_no_data_found"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mont_reg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="No Record Found...!"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


    </LinearLayout>



</RelativeLayout>