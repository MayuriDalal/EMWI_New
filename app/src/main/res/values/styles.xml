<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tv_style_activite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_margin">@dimen/small_padding</item>
        <item name="android:background">@drawable/active_tab</item>
    </style>

    <style name="tv_style_inactivite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_margin">@dimen/small_padding</item>
        <item name="android:background">@drawable/inactive_tab</item>
    </style>

    <style name="style_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_padding</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/header_size</item>
    </style>

    <style name="style_footer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_padding</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textSize">@dimen/footer_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="style_selected_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/tv_selected_tab</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="profile_info_tv">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="profile_info_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_footer</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="et_security_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_marginLeft">@dimen/et_margin_left</item>
        <item name="android:layout_marginRight">@dimen/et_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/et_margin_bottom</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:fontFamily">@font/mont_bold</item>
    </style>

    <style name="tv_security_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_marginLeft">@dimen/et_margin_left</item>
        <item name="android:layout_marginRight">@dimen/et_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/et_margin_bottom</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textSize">@dimen/tv_size</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp60</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="android:layout_marginTop">@dimen/dp30</item>
        <item name="android:paddingLeft">@dimen/dp40</item>
    </style>

    <style name="tv_spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginLeft">@dimen/dp60</item>
        <item name="android:layout_marginRight">@dimen/dp60</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
        <item name="android:paddingLeft">@dimen/dp40</item>
    </style>

    <style name="et_prf_contact_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">@dimen/dp60</item>
        <item name="android:layout_marginRight">@dimen/dp60</item>
        <item name="android:layout_marginTop">@dimen/dp30</item>
        <item name="android:textSize">@dimen/tv_size</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:paddingLeft">@dimen/dp40</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="style_upload_kyc_tv1">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:padding">@dimen/sp2</item>
        <item name="android:layout_marginTop">@dimen/sp10</item>
        <item name="android:layout_marginLeft">@dimen/sp100</item>
    </style>

    <style name="style_upload_kyc_tv2">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/mont_reg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp9</item>
        <item name="android:padding">@dimen/sp2</item>
        <item name="android:layout_marginLeft">@dimen/sp100</item>
    </style>

    <style name="style_upload_kyc_btn">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/sp5</item>
        <item name="android:layout_marginLeft">@dimen/sp180</item>
    </style>

    <style name="style_footer_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mont_bold</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">@dimen/sp2</item>
        <item name="android:background">@drawable/bottom_button</item>
        <item name="android:padding">@dimen/sp5</item>
    </style>


</resources>